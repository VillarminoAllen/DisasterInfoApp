<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".typhoon_tips">

    <!-- Back Button -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Back to Dashboard"
        android:backgroundTint="#607D8B"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header Text View (Displays "Earthquake Safety Information") -->
    <TextView
        android:id="@+id/textViewSafetyTipsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flood Safety Information"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSafetyTipsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content Area for Safety Tips Text -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewSafetyTipsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For maximum safety, you must Turn Around, Don't Drown! by never entering floodwater, and you should also prepare an emergency kit and evacuation plan beforehand, listen to authorities and seek high ground immediately during a flood, and wait for official clearance while avoiding contact with contaminated water and electricity afterward."
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
