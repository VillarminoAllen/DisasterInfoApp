<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header Text -->


    <!-- 2x3 Button Grid Container -->
    <GridLayout
        android:id="@+id/gridLayoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"

        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371">

        <!-- Row 1, Col 1: Earthquake -->
        <Button
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:text="Earthquake"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <!-- Row 1, Col 2: Flood -->
        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            android:text="Flood"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <!-- Row 2, Col 1: Fire -->
        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#FF9800"
            android:elevation="4dp"
            android:text="Fire"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <!-- Row 2, Col 2: Typhoon -->
        <Button
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#9C27B0"
            android:elevation="4dp"
            android:text="Typhoon"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <!-- NEW Button 5: Emergency Hotlines -->
        <Button
            android:id="@+id/button5"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#F44336"
            android:elevation="4dp"
            android:text="Emergency Hotlines"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <!-- NEW Button 6: Evacuation Map -->
        <Button
            android:id="@+id/button6"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#00BCD4"
            android:elevation="4dp"
            android:text="Evacuation Map"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

    </GridLayout>

    <!-- Optional: Footer/Branding text -->

</androidx.constraintlayout.widget.ConstraintLayout>
